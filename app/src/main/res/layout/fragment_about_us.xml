<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutUsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="@string/AboutUs"
                android:textColor="@color/colorOrange"
                android:textSize="33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TabHost
                android:id="@+id/tabHost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/tab_background"
                        android:padding="2dp" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp">

                        <LinearLayout
                            android:id="@+id/tab1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.core.widget.NestedScrollView
                                android:id="@+id/Scrollview3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/constraintLayout2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/AboutCard0"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        app:cardCornerRadius="12dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#EEEEEF"
                                            android:paddingVertical="10dp">

                                            <TextView
                                                android:id="@+id/nameTextView"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/proxima_nova_regular"
                                                android:paddingHorizontal="15dp"
                                                android:paddingVertical="5dp"
                                                android:text="@string/name"
                                                android:textColor="@color/colorOrange"
                                                android:textSize="20dp"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:id="@+id/regNoTextView"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/proxima_nova_regular"
                                                android:paddingHorizontal="15dp"
                                                android:paddingVertical="5dp"
                                                android:text="@string/regNo"
                                                android:textColor="@color/colorGrey"
                                                android:textSize="20dp"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

                                            <TextView
                                                android:id="@+id/emailTextView"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/proxima_nova_regular"
                                                android:paddingHorizontal="15dp"
                                                android:paddingVertical="5dp"
                                                android:text="@string/email"
                                                android:textColor="@color/colorGrey"
                                                android:textSize="20dp"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/regNoTextView" />

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/AboutCard1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        app:cardCornerRadius="12dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/AboutCard0">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#EEEEEF">

                                            <ImageView
                                                android:id="@+id/AUADGlogo"
                                                android:layout_width="67dp"
                                                android:layout_height="46dp"
                                                android:layout_marginStart="16dp"
                                                android:layout_marginLeft="16dp"
                                                android:layout_marginTop="16dp"
                                                android:contentDescription="@string/todo"
                                                android:src="@drawable/ic_adg_logo_hr"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:id="@+id/AUADG"
                                                android:layout_width="0dp"
                                                android:layout_height="27dp"
                                                android:layout_marginStart="30dp"
                                                android:layout_marginLeft="30dp"
                                                android:layout_marginTop="16dp"
                                                android:fontFamily="@font/proxima_nova_regular"
                                                android:text="@string/ADG"
                                                android:textColor="#000000"
                                                android:textSize="18sp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintHorizontal_bias="0.0"
                                                app:layout_constraintStart_toEndOf="@+id/AUADGlogo"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <TextView
                                                android:id="@+id/AUVV"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="30dp"
                                                android:layout_marginLeft="30dp"
                                                android:fontFamily="@font/proxima_nova_regular"
                                                android:text="@string/VV"
                                                android:textColor="#1ACB80"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintHorizontal_bias="0.0"
                                                app:layout_constraintStart_toEndOf="@+id/AUADGlogo"
                                                app:layout_constraintTop_toBottomOf="@+id/AUADG" />

                                            <TextView
                                                android:id="@+id/AUdesc"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="16dp"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginEnd="16dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/proxima_nova_regular"
                                                android:text="@string/audesc"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="16sp"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/AUVV"
                                                app:layout_constraintVertical_bias="1.0" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/AboutCard2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        app:cardCornerRadius="12dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/AboutCard1">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#EEEEEF">

                                            <TextView
                                                android:id="@+id/auOurApps"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="16dp"
                                                android:layout_marginTop="16dp"
                                                android:fontFamily="@font/proxima_nova_regular"
                                                android:text="@string/OurApps"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="18sp"
                                                android:textStyle="bold"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <ImageView
                                                android:id="@+id/imtap"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginStart="16dp"
                                                android:layout_marginLeft="16dp"
                                                android:layout_marginTop="15dp"
                                                android:layout_marginBottom="10dp"
                                                android:contentDescription="@string/todo"
                                                android:src="@drawable/taplogo"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/auOurApps" />

                                            <ImageView
                                                android:id="@+id/impap"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginStart="20dp"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginTop="15dp"
                                                android:layout_marginBottom="10dp"
                                                android:contentDescription="@string/todo"
                                                android:src="@drawable/paperlogo"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toEndOf="@+id/imtap"
                                                app:layout_constraintTop_toBottomOf="@+id/auOurApps" />

                                            <ImageView
                                            android:id="@+id/imtp"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginStart="20dp"
                                            android:layout_marginLeft="2dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginBottom="10dp"
                                            android:contentDescription="@string/todo"
                                            android:src="@drawable/tplogo"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toEndOf="@+id/impap"
                                            app:layout_constraintTop_toBottomOf="@+id/auOurApps" />

                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/AboutCard3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="10dp"
                                        app:cardCornerRadius="12dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/AboutCard2">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#EEEEEF">


                                            <TextView
                                                android:id="@+id/auOurEvents"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="16dp"
                                                android:layout_marginTop="16dp"
                                                android:fontFamily="@font/proxima_nova_regular"
                                                android:text="@string/OurEvents"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="18sp"
                                                android:textStyle="bold"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent" />

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="15dp"
                                                android:layout_marginLeft="15dp"
                                                android:layout_marginTop="15dp"
                                                android:layout_marginBottom="10dp"
                                                android:orientation="horizontal"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/auOurEvents">

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center"
                                                    android:orientation="vertical">

                                                    <ImageView
                                                        android:id="@+id/imiosf"
                                                        android:layout_width="32dp"
                                                        android:layout_height="32dp"
                                                        android:contentDescription="@string/todo"
                                                        android:src="@drawable/ic_iosf_logo"
                                                        app:layout_constraintStart_toStartOf="parent"
                                                        app:layout_constraintTop_toBottomOf="@+id/auOurEvents" />

                                                    <TextView
                                                        android:id="@+id/auiftv"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/proxima_nova_regular"
                                                        android:text="@string/Iosf"
                                                        android:textSize="11dp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>

                                                <Space
                                                    android:layout_width="30dp"
                                                    android:layout_height="wrap_content" />

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center"
                                                    android:orientation="vertical">

                                                    <ImageView
                                                        android:id="@+id/imud"
                                                        android:layout_width="32dp"
                                                        android:layout_height="32dp"
                                                        android:contentDescription="@string/todo"
                                                        android:src="@drawable/ic_unidev_logo"
                                                        app:layout_constraintStart_toEndOf="@+id/imiosf"
                                                        app:layout_constraintTop_toBottomOf="@+id/auOurEvents" />

                                                    <TextView
                                                        android:id="@+id/auudtv"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/proxima_nova_regular"
                                                        android:text="@string/unidev"
                                                        android:textSize="11dp"
                                                        android:textStyle="bold" />

                                                </LinearLayout>

                                                <Space
                                                    android:layout_width="30dp"
                                                    android:layout_height="wrap_content" />

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center"
                                                    android:orientation="vertical">

                                                    <ImageView
                                                        android:id="@+id/imhg"
                                                        android:layout_width="32dp"
                                                        android:layout_height="32dp"
                                                        android:contentDescription="@string/todo"
                                                        android:src="@drawable/ic_hackgrid_logo"
                                                        app:layout_constraintStart_toEndOf="@+id/imud"
                                                        app:layout_constraintTop_toBottomOf="@+id/auOurEvents" />

                                                    <TextView
                                                        android:id="@+id/auhgtv"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/proxima_nova_regular"
                                                        android:text="@string/hackgrid"
                                                        android:textSize="11dp"
                                                        android:textStyle="bold"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        app:layout_constraintStart_toEndOf="@id/auudtv"
                                                        app:layout_constraintTop_toBottomOf="@+id/imhg"
                                                        app:layout_constraintVertical_bias="0.0" />

                                                </LinearLayout>
                                            </LinearLayout>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                    </androidx.cardview.widget.CardView>

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.core.widget.NestedScrollView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tab2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/akshit"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ishaan"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/navdeep"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ankit"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/supreeth"/>

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </TabHost>

            <Button
                style="@style/Button"
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="30dp"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tabHost"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/privacyPolicy"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logoutButton">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EEEEEF"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:text="@string/privacyPolicy"
                        android:textAlignment="center"
                        android:textColor="@color/colorOrange"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/contactUs"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logoutButton">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EEEEEF"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:text="@string/contactUs"
                        android:textAlignment="center"
                        android:textColor="@color/colorOrange"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>