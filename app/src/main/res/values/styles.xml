<resources xmlns:tool="http://schemas.android.com/apk/res-auto">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tool:targetApi="23">true</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="materialButtonStyle">@style/Button</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="android:height">65dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button2" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:height">60dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>
